<MenuScreen>:
    GridLayout:
        cols: 1
        Image:
            source: 'logo.png'
        Button:
            text: 'Full normal map generation process'
            on_press: root.manager.current = 'full_process_part_1_screen'
        Button:
            text: 'Gather input images'
            on_press: root.manager.current = 'gather_screen'
        Button:
            text: 'Calculate normal map'
            on_press: root.manager.current = 'calculate_screen'
        Button:
            text: 'Calibrate camera'
            on_press: root.manager.current = 'calibrate_screen'
        Button:
            text: 'Quit'

<FullProcessPart1Screen>:
    GridLayout:
        cols: 1
        rows: 2
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu_screen'

<GatherScreen>:
    GridLayout:
        cols: 1
        rows: 2
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu_screen'

<CalculateScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu_screen'

<CalibrateScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu_screen'
